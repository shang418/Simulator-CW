package MapClass;

import java.util.ArrayList;

public class CSpace {
	Map MapClass; 
	ArrayList<Obstacle> cspace_obs;
	
	public CSpace(Map mapclass){
		this.MapClass=mapclass; 
		this.cspace_obs=new ArrayList<Obstacle>();
	}
	
	public void configureCSpace(){
		for(Obstacle obs: this.MapClass.getList_obstacles()){
			int x=0;
			int y=0;
			int w=0; 
			int h=0; 
			int diff_x=obs.getX()-Player.RADIUS; 
			if(diff_x>=0){
				
			}
			obs.setBounds(x,y, (int)(obs.getWidth()+(2*Player.RADIUS)), (int)(obs.getLength()+(2*Player.RADIUS)));
			
		}
	}
}
